<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="257dp"
        android:layout_height="33dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="626dp"
        android:text="Saber Tipo Triangulo"
        android:textAlignment="center"
        android:textColor="#0653EB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lado1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Digite primer lado"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/lado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Digite segundo lado"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/lado1"
        app:layout_constraintStart_toStartOf="@+id/lado1"
        app:layout_constraintTop_toBottomOf="@+id/lado1" />

    <EditText
        android:id="@+id/lado3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Digite tercer lado"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/lado2"
        app:layout_constraintStart_toStartOf="@+id/lado2"
        app:layout_constraintTop_toBottomOf="@+id/lado2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:text="Resultado"
        android:textAlignment="center"
        android:textColor="#0653EB"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/lado3"
        app:layout_constraintStart_toStartOf="@+id/lado3"
        app:layout_constraintTop_toBottomOf="@+id/lado3" />

    <TextView
        android:id="@+id/result_tria"
        android:layout_width="147dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/calc"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Calcular"
        android:textColorLink="#0653EB"
        app:layout_constraintEnd_toEndOf="@+id/result_tria"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/result_tria"
        app:layout_constraintTop_toBottomOf="@+id/result_tria" />

</androidx.constraintlayout.widget.ConstraintLayout>